{
    "tech_stack": [
        "TypeScript",
        "Next.js",
        "Supabase",
        "PostgreSQL",
        "Tailwind CSS"
    ],
    "features": [
        {
            "name": "createPost",
            "description": "Creates a new community post. Requires authentication via Bearer token. Validates input and saves to Supabase.",
            "files": [
                "app/api/posts/route.ts"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/posts": {
                        "post": {
                            "summary": "Create a new post",
                            "requestBody": {
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "title": {
                                                    "type": "string"
                                                },
                                                "content": {
                                                    "type": "string"
                                                },
                                                "category": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "title",
                                                "content",
                                                "category"
                                            ]
                                        }
                                    }
                                }
                            },
                            "responses": {
                                "201": {
                                    "description": "Post created successfully"
                                },
                                "401": {
                                    "description": "Unauthorized"
                                },
                                "400": {
                                    "description": "Missing required fields"
                                },
                                "500": {
                                    "description": "Server error"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "getPostsByCategory",
            "description": "Fetches a list of posts filtered by category. Publicly accessible.",
            "files": [
                "app/api/posts/route.ts"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/posts": {
                        "get": {
                            "summary": "Get posts by category",
                            "parameters": [
                                {
                                    "name": "category",
                                    "in": "query",
                                    "required": true,
                                    "schema": {
                                        "type": "string"
                                    }
                                }
                            ],
                            "responses": {
                                "200": {
                                    "description": "List of posts"
                                },
                                "400": {
                                    "description": "Category parameter is required"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "getPostById",
            "description": "Fetches a single post by its ID. Publicly accessible.",
            "files": [
                "app/api/posts/[id]/route.ts"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/posts/{id}": {
                        "get": {
                            "summary": "Get post by ID",
                            "parameters": [
                                {
                                    "name": "id",
                                    "in": "path",
                                    "required": true,
                                    "schema": {
                                        "type": "string",
                                        "format": "uuid"
                                    }
                                }
                            ],
                            "responses": {
                                "200": {
                                    "description": "Post details"
                                },
                                "404": {
                                    "description": "Post not found"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "updatePost",
            "description": "Updates an existing post. Requires authentication via Bearer token and ownership.",
            "files": [
                "app/api/posts/[id]/route.ts"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/posts/{id}": {
                        "put": {
                            "summary": "Update a post",
                            "parameters": [
                                {
                                    "name": "id",
                                    "in": "path",
                                    "required": true,
                                    "schema": {
                                        "type": "string",
                                        "format": "uuid"
                                    }
                                }
                            ],
                            "requestBody": {
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "title": {
                                                    "type": "string"
                                                },
                                                "content": {
                                                    "type": "string"
                                                },
                                                "category": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "responses": {
                                "200": {
                                    "description": "Post updated successfully"
                                },
                                "401": {
                                    "description": "Unauthorized"
                                },
                                "500": {
                                    "description": "Server error or permission denied"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "deletePost",
            "description": "Deletes a post. Requires authentication via Bearer token and ownership.",
            "files": [
                "app/api/posts/[id]/route.ts"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/api/posts/{id}": {
                        "delete": {
                            "summary": "Delete a post",
                            "parameters": [
                                {
                                    "name": "id",
                                    "in": "path",
                                    "required": true,
                                    "schema": {
                                        "type": "string",
                                        "format": "uuid"
                                    }
                                },
                                {
                                    "name": "category",
                                    "in": "query",
                                    "required": false,
                                    "schema": {
                                        "type": "string"
                                    }
                                }
                            ],
                            "responses": {
                                "200": {
                                    "description": "Post deleted"
                                },
                                "401": {
                                    "description": "Unauthorized"
                                },
                                "500": {
                                    "description": "Server error"
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}